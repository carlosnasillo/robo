# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                               controllers.Application.index

POST    /api/register                                   controllers.users.Users.register
POST    /api/login                                      controllers.users.Users.login
PUT     /api/user/password                              controllers.users.Users.updatePassword
PUT     /api/user/personalData                          controllers.users.Users.updatePersonalData
GET     /api/user/:email                                controllers.users.Users.isUsed(email)
GET     /api/user/infos/:email                          controllers.users.Users.userData(email)
POST    /api/user/destroy                               controllers.users.Users.destroyAccount

POST    /api/user/platform                              controllers.platforms.Platforms.addPlatform
PUT     /api/user/p2pPlatforms                          controllers.platforms.Platforms.updatePlatforms

PUT     /api/strategies/primary/buy                     controllers.strategies.Strategies.updatePrimaryMarketBuyStrategies
PUT     /api/strategies/secondary/buy                   controllers.strategies.Strategies.updateSecondaryMarketBuyStrategies
PUT     /api/strategies/secondary/sell                  controllers.strategies.Strategies.updateSecondaryMarketSellStrategies
PUT     /api/strategies/auto                            controllers.strategies.Strategies.updateAutomatedStrategy

GET     /api/dashboard/capital/available                controllers.portfolioMetrics.PortfolioMetrics.availableCapital
GET     /api/dashboard/capital/allocated                controllers.portfolioMetrics.PortfolioMetrics.allocatedCapital
GET     /api/dashboard/averageIntRate                   controllers.portfolioMetrics.PortfolioMetrics.averageIntRate
GET     /api/dashboard/expectedReturns                  controllers.portfolioMetrics.PortfolioMetrics.expectedReturns
GET     /api/dashboard/lastLoanMaturity                 controllers.portfolioMetrics.PortfolioMetrics.lastLoanMaturity
GET     /api/dashboard/currentRoiRate                   controllers.portfolioMetrics.PortfolioMetrics.currentRoiRate
GET     /api/dashboard/expectedRoiRate                  controllers.portfolioMetrics.PortfolioMetrics.expectedRoiRate
GET     /api/dashboard/currentLoans                     controllers.portfolioMetrics.PortfolioMetrics.currentLoans
GET     /api/dashboard/loansAcquiredPerDayLastWeek      controllers.portfolioMetrics.PortfolioMetrics.loansAcquiredPerDayLastWeek
GET     /api/dashboard/platformAllocation               controllers.portfolioMetrics.PortfolioMetrics.platformAllocation
GET     /api/dashboard/riskDiversification              controllers.portfolioMetrics.PortfolioMetrics.riskDiversification

GET     /api/portfolio/suggestion                       controllers.users.Users.portfolioSuggestion

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
